@{
    var title = ViewData["Title"] as string ?? "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - PlayBoys</title>

    <!-- Bootstrap 5 (CDN). If you use local bootstrap via LibMan, replace these. -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/dashlite/css/dashlite.css" rel="stylesheet" asp-append-version="true">
    <!-- Site styles with project color palette -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <partial name="_TopNav" />

    <main class="pb-4">
        @RenderBody()
    </main>

    <!-- Optionally add footer here -->

    <!-- Bootstrap bundle (dropdowns, collapse, etc.) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

